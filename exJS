 // Iteration 1: Names and Input

let hacker1 = "Ivan"; // Create.
console.log(`The driver's name is ${hacker1}.`); // Print.

let hacker2 = "Intuition" ; // Create.
console.log(`The navigator's name is ${hacker2}`); // Print.


// Iteration 2: Cnditionals 

let text1 = "The driver has the longest name, it has XX characters.";
let text2 = "It seems that the navigator has the longest name, it has XX characters.";
let text3 = "Wow, you both have equally long names, XX characters!";

if (hacker1.length > hacker2.length) {
    console.log(text1);
} else if (hacker2.length > hacker1.length) {
    console.log(text2)
} else {
    console.log(text3)
}  // Print the name that is longer.



// Iteration 3:Loops
//.1.a
let capitalHacker1 = "";

for (let i=0; i<hacker1.length; i++) {
    capitalHacker1 = capitalHacker1 + " " + hacker1[i];
}
console.log(capitalHacker1.toUpperCase()) // Print the characters with space and in capital letters.

//.2.a
let reverseHacker2 = "";

for (let i=hacker2.length-1; i>0; i--) {
    reverseHacker2 = reverseHacker2 + hacker2[i];
}
console.log(reverseHacker2); // Prints the name backwards.


//.1.b
// let capitalHacker1 = hacker1.toUpperCase().split('');
// console.log(capitalHacker1); // What I did first. Why it's wrong?

// .2.b
// let reverseHacker2 = hacker2.split('').reverse().join("");
// console.log(reverseHacker2); // Print the characters in reverse order.


 //.3
if (capitalHacker1 > reverseHacker2) {
    console.log(`The driver's name goes first: "${capitalHacker1}".`)
} else if (reverseHacker2 > capitalHacker1) {
    console.log(`Yo, the navigator goes first, definitely: "${reverseHacker2}".`)
} else {
    console.log(`What?! You both have the same name? "${capitalHacker1}" equal to "${reverseHacker2}".`)
} // Depending on the lexicographical order. 




